<%= render 'header' %>

<div class="container-fluid page">
	<div class="row">
		<%= render 'sidebar' %>
		<div class="col-md-10">
			<div class="content">
				<%= form_for @post, url: save_post_admin_panel_url do |form| %>
					<div class="form-group">
						<%= form.label :title %>
						<%= form.text_field :title, class: 'form-control' %>
					</div>
					<div class="form-group">
						<%= form.label :content %>
						<div id="md-editor" data-target="post_content" data-content="<%= @post.content %>"></div>
					</div>
					<%= form.submit "Save Post", class: 'btn btn-success' %>
				<% end %>
			</div>
		</div>
	</div>
</div>
