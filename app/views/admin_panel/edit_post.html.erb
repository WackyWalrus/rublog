<%= render 'header' %>


<div class="container-fluid page">
	<div class="row">
		<%= render partial: 'sidebar', locals: { active: 'posts' } %>
		<div class="col-sm-10">
			<div class="content">
				<% if params[:message] %>
					<div class="alert alert-success">
						<%= params[:message] %>
					</div>
				<% end %>
				<%= form_for @post, url: { action: "update_post", id: @post.id, controller: "admin_panel" } do |form| %>
					<div id="md-editor" data-target="post" data-content="<%= @post.content %>" data-title="<%= @post.title %>"></div>
					<%= form.submit "Save Post", class: 'btn btn-success' %>
				<% end %>
			</div>
		</div>
	</div>
</div>
