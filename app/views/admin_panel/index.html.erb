<%= render 'header' %>

<div class="container-fluid page">
	<div class="row">
		<%= render partial: 'sidebar', locals: { active: 'posts' } %>
		<div class="col-sm-10">
			<div class="content">
				<table class="table">
					<thead>
						<tr>
							<th>Title</th>
							<th>Created On</th>
							<th>Updated On</th>
							<th>Actions</th>
						</tr>
					</thead>
					<tbody>
						<% @posts.each do |post| %>
							<tr>
								<td><%= post.title %></td>
								<td><%= post.created_at %></td>
								<td><%= post.updated_at %></td>
								<td>
									<%= link_to edit_post_admin_panel_url(id: post.id), class: 'btn btn-info btn-xs' do %>
										<span class="glyphicon glyphicon-pencil"></span>
									<% end %>
									<a href="<%= post.url %>" class="btn btn-info btn-xs"><span class="glyphicon glyphicon-eye-open"></span></a>
									<%= link_to delete_post_admin_panel_url(id: post.id), class: 'btn btn-danger btn-xs', method: :delete do %>
										<span class="glyphicon glyphicon-remove"></span>
									<% end %>
								</td>
							</tr>
						<% end %>
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>
