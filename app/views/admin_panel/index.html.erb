<%= render 'header' %>

<div class="container-fluid page">
	<div class="row">
		<%= render 'sidebar' %>
		<div class="col-md-10">
			<div class="content">
				<table class="table">
					<thead>
						<tr>
							<th>Title</th>
							<th>Created On</th>
							<th>Updated On</th>
							<th>Actions</th>
						</tr>
					</thead>
					<tbody>
						<% @posts.each do |post| %>
							<tr>
								<td><%= post.title %></td>
								<td><%= post.created_at %></td>
								<td><%= post.updated_at %></td>
								<td>
									<%= link_to edit_post_admin_panel_url, class: 'btn btn-info btn-xs' do %>
										<span class="glyphicon glyphicon-pencil"></span>
									<% end %>
									<a href="#" class="btn btn-info btn-xs"><span class="glyphicon glyphicon-eye-open"></span></a>
								</td>
							</tr>
						<% end %>
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>
