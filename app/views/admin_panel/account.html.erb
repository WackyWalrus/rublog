<%= render 'header' %>

<div class="container-fluid page">
	<div class="row">
		<%= render partial: 'sidebar', locals: { active: 'account' } %>
		<div class="col-sm-10">
			<div class="content">
				<%= form_for @current_user, url: update_account_admin_panel_url do |form| %>
					<div class="form-group">
						<%= form.label :email %>
						<%= form.email_field :email, class: 'form-control' %>
					</div>
					<div class="form-group">
						<%= form.label :password %>
						<%= form.password_field :password, class: 'form-control' %>
					</div>
				<% end %>
			</div>
		</div>
	</div>
</div>
